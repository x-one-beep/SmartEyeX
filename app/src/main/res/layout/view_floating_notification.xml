<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/hud_card"
    android:layout_width="260dp"
    android:layout_height="80dp"
    android:layout_margin="12dp"

    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/hud_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- ICON DIHAPUS DULU BIAR AMAN -->
        <!--
        <ImageView
            android:id="@+id/hud_eye"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />
        -->

        <TextView
            android:id="@+id/hud_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartEyeX"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hud_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hud_title"
            android:layout_marginTop="4dp"
            android:text="All clear"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
