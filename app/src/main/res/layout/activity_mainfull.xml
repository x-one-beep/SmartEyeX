<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".MainActivity">

    <!-- 1. Holographic Dashboard / Particles -->
    <FrameLayout
        android:id="@+id/dashboard_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/holographic_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/voice_input_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- RecyclerView for memory particles -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_memory_particles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:scrollbars="vertical"/>

        <!-- Optional shimmer / animation overlay -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- 2. Voice / Chat Panel -->
    <LinearLayout
        android:id="@+id/voice_input_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#1A1A1A"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/voice_input_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ketik atau bicara..."
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"/>

        <ProgressBar
            android:id="@+id/pb_voice_listening"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/btn_voice_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_mic"
            android:tint="#00FFAA"
            android:contentDescription="Voice / Send"/>
    </LinearLayout>

    <!-- 3. AR Overlay / Camera Preview -->
    <FrameLayout
        android:id="@+id/ar_overlay_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:background="@drawable/ar_overlay_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- AR objects overlay -->
        <FrameLayout
            android:id="@+id/ar_objects_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- 4. WhatsApp / Notifications Panel -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/wa_notifications_panel"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_latest_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender"
                android:textColor="#00FFAA"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tv_latest_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message preview..."
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>

    <!-- 5. Floating Buttons -->
    <ImageButton
        android:id="@+id/btn_feedback"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/floating_button_bg"
        android:src="@drawable/ic_feedback"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/voice_input_panel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/btn_gesture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/floating_button_bg"
        android:src="@drawable/ic_gesture"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/voice_input_panel"
        app:layout_constraintEnd_toStartOf="@id/btn_feedback"
        android:layout_marginEnd="12dp"/>

    <!-- 6. Overlay Text Feedback -->
    <TextView
        android:id="@+id/tv_overlay_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FFAA"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ar_overlay_container"
        app:layout_constraintStart_toStartOf="@id/ar_overlay_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>