<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Camera feature -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="SmartEyeX"
        android:theme="@style/Theme.SmartEyeX">

        <!-- MAIN ACTIVITY -->
        <activity
            android:name="com.smarteyex.core.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- SETTINGS -->
        <activity
            android:name="com.smarteyex.core.SettingsActivity"
            android:exported="false" />

        <!-- FOREGROUND SERVICE -->
        <service
            android:name="com.smarteyex.core.service.DetectForegroundService"
            android:exported="false"
            android:foregroundServiceType="camera|microphone" />

    </application>

</manifest>
